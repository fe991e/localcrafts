<% if(success && success.length) { %>
    <div class="alert alert-info alert-dismissible fade show py-1" role="alert">
        <%= success %>
        <button type="button" class="btn-close pt-0" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show py-1" role="alert">
        <%= error %>
        <button type="button" class="btn-close pt-0" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
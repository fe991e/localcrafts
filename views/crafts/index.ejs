<% layout('layouts/boilerplate') %>
    <main class="container" style="max-width: 75%;">
        <h1>Crafts List</h1>
        
        <ul class="mt-3">
            <a href="crafts/add">Add a Craft</a>
            <% for(let craft of crafts){ %>
                <div class="card mb-2">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img class="rounded-start img-fluid fit" src="<%= craft.images.length ? craft.images[0].url : 'https://res.cloudinary.com/dshie3ran/image/upload/v1649833464/Acrafts_qaijn9.jpg'%>" alt="craftimg">
                        </div>
                        <div class="col-md-8" style="max-height: 15rem;">
                            <div class="p-2">
                                <h5 class="card-title"><%=craft.craftName%></h5>
                                <p class="card-text"><%=craft.description%></p>
                                <small><%=craft.location%></small>
                                <a class="btn btn-primary btn-sm" href="craft/<%=craft._id%>">See Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </ul>
    </main>
    <style>
        .fit {
            width: 100%;
            min-height: 100%;
        }
        .card-text{
            font-size: small;
        }
        </style>
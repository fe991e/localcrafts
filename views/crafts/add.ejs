<% layout('layouts/boilerplate') %>
    <main class="row">
        
            <h1 class="text-center">Add Listing</h1>
        <div class="col-6 offset-3">
            <form action="/craft" method="POST" enctype="multipart/form-data" novalidate class="validated-form">
            <div class="mb-2">
                <label class="form-label" for="craftName">Craft Name</label>
                <input class="form-control" type="text" id="craftName" name="crafts[craftName]" required/>
            </div>
            <label class="form-label for="price">Price</label>
            <div class="mb-2">
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" id="price" name="crafts[price]" placeholder="0" required/>
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="input-group custom-file mb-2">
                <label for="img" class="input-group-text">&#10064;</label>
                <input class="form-control custom-file-input" type="file" name="image" id="img" multiple required>
                <label class="custom-file-label bg-success p-2 text-dark bg-opacity-25 rounded-bottom" for="img"></label> 
            </div>
            <div class="input-group mb-2">
                <span class="input-group-text" for="desc">Description</span>         
                <textarea class="form-control" id="desc" name="crafts[description]" required></textarea>
            </div>
            <div class="mb-2">
                <label for="loc">Location</label>
                <input class="form-control" type="text" id="loc" name="crafts[location]" required/>
            </div>

                <button class="btn btn-success mb-3">Add Craft</button>           

            </form>
        </div>
    </main>
    <section class="col-6 offset-6">
        <a href="/crafts">Crafts</a>
    </section>